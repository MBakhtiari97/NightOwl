@model NightOwl.DataLayer.Entities.Galleries

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col col-md-12">
    <div>
        <h1>Image Detail's</h1>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.GalleryId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GalleryId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImageName)
            </dt>
            <dd class="col-sm-10">
                <img src="/img/Galleries/@Model.ImageName" class="img-thumbnail adminGalleryImageDetails"/>
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ImageAltName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ImageAltName)
            </dd>
        </dl>
    </div>
    <div>
        <a class="btn btn-outline-warning">Update Gallery</a>&nbsp;|

        <a href="/Admin/Galleries/@Model.ItemId">Back to Image Galleries</a>
    </div>
</div>



