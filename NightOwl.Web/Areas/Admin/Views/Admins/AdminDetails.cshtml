@model NightOwl.DataLayer.Entities.Admins

@{
    ViewData["Title"] = "ConfirmRequest";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col col-md-12">
    <div>
        <h1>ConfirmRequest</h1>
        <hr/>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AdminName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AdminName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AdminIpAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AdminIpAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AdminEmailAddress)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AdminEmailAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AdminPhoneNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AdminPhoneNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IsActive)
            </dd>
        </dl>
    </div>
    <div>
        @if (!Model.IsActive)
        {
            <a class="btn btn-success" href="/Admin/ManageRequest/Confirm/@Model.AdminId">Confirm Request</a>
        }
        <a class="btn btn-secondary" href="/Admin/AdminIndex">Go To List Admins</a> 
    </div>

</div>
